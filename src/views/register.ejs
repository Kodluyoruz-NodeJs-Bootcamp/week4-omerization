<%- include('partials/header'); -%>

<div>
    <div style="margin-right: auto;margin-left: auto;max-width: 32rem;padding:0 10px 0 10px;">
      <form action="/register" method="POST" id="registerform" onsubmit="checkForm();">
          <h2 style="text-align: center;color:white;padding-bottom: 30px;">Patika'ya katıl  </h2>
         <div class="form-group">
           <label for="exampleInputEmail1" class="registerlabel">Email adresi:</label>
           <input type="email" class="form-control register-form" id="exampleInputEmail1"  placeholder="isminiz@ornek.com" name="email" required>
         </div>       
         <div style="display:flex;">
         <div class="form-group">
           <label for="exampleInputEmail1" class="registerlabel">İsim:</label>
           <input type="text" maxlength="20"  class="form-control register-form" data-max-words="2" id="exampleInputEmail1"  placeholder="Ahmet" name="first_name" required>
         </div>
         <div class="form-group" style="padding: 0 5px;">
           <label for="exampleInputEmail1"  class="registerlabel">Soyisim:</label>
           <input type="text" maxlength="24" pattern="^\p{L}+$" class="form-control register-form" data-max-words="1" id="InputLastname1"  placeholder="Örken" name="last_name" required>
         </div>
        </div>
         <div class="form-group">
          <label for="exampleInputPassword1" class="registerlabel">Parola:</label>
          <input type="password"   pattern="^(?=.*\d)(?=.*[A-Z,Ş,Ö,Ç,Ö,Ü,Ğ]).{8,15}$" class="form-control register-form" title="Parola en az bir sayı,büyük harf ve küçük harf içermeli, 8 veya daha fazla karakterli olmalıdır." id="InputPassword1" placeholder="Güvenli bir parola seçin" name="password" required>
          <span toggle="#InputPassword1" class="fa fa-fw fa-eye field-icon toggle-password"></span>
          <div id="password-rules"> • 8 karakter veya fazla  • En az bir büyük harf ve sayı  </div>
        </div>
        <div class="form-group" style="display:flex; color:white;">

          <label class="agreement-container">
            <input type="checkbox" name="terms"  required>
            <span class="agreement-checkmark"></span>
          </label>
             <a href="/user-agreement"  target="_blank">Kullanıcı sözleşmesini </a> &nbsp  okudum ve onaylıyorum</span></span> 
        </div>
         <button type="submit" class="btn btn-primary registerbuton">Kaydol</button>
         <h4 style="text-align:center;padding-top:1rem; color:white;">Zaten bir hesabınız var mı? <span style="color:#ee4b28 !important;"><a href="/login">Giriş Yapın</a> </span></h4>
       </form>
    </div>

  </div>

  <%- include('partials/footer'); -%>